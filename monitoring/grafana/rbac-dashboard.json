{
  "dashboard": {
    "id": null,
    "title": "Twenty One Pilots - Security & RBAC Monitoring",
    "tags": ["security", "rbac", "audit"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "User Authentication Trends",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(twentyonepilots_auth_login_total[5m])) by (method)",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "2FA Verification Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(twentyonepilots_2fa_verification_total{status=\"success\"}[5m]) / rate(twentyonepilots_2fa_verification_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Failed Login Attempts by IP",
        "type": "table",
        "targets": [
          {
            "expr": "sum(increase(twentyonepilots_auth_login_failures_total[1h])) by (ip)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "RBAC Permission Changes",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"twentyonepilots-audit\"} |= \"PERMISSION_\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
