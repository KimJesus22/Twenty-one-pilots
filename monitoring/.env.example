# Monitoring Environment Variables

# Email Configuration for Alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alerts@yourcompany.com
CRITICAL_ALERT_EMAIL=urgent@yourcompany.com

# Slack Configuration for Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Prometheus Pushgateway for E2E Metrics
PROMETHEUS_PUSHGATEWAY=http://localhost:9091

# Grafana Configuration
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false

# Alert Thresholds (can be customized)
ALERT_LATENCY_WARNING=500
ALERT_LATENCY_CRITICAL=2000
ALERT_ERROR_RATE_WARNING=0.05
ALERT_ERROR_RATE_CRITICAL=0.10
ALERT_MEMORY_WARNING=0.8
ALERT_MEMORY_CRITICAL=0.9