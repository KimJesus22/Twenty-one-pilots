# Configuración de la aplicación
NODE_ENV=development
PORT=5000

# Base de datos MongoDB
MONGO_URI=mongodb://localhost:27017/twentyonepilots

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key-here

# Spotify API (opcional)
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Eventbrite API (opcional)
EVENTBRITE_API_KEY=your-eventbrite-api-key

# Stripe para pagos
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# PayPal (opcional)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Redis para caché distribuido
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# Configuración SSL/TLS (opcional)
FORCE_HTTPS=false
SSL_KEY_PATH=./ssl/private.key
SSL_CERT_PATH=./ssl/certificate.crt
SSL_CA_BUNDLE_PATH=./ssl/ca-bundle.crt

# Configuración de frontend
FRONTEND_URL=http://localhost:3000

# Configuración de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Configuración de monitoreo
MONITORING_TOKEN=your-monitoring-token-here

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de CSRF
CSRF_SECRET=your-csrf-secret-here

# Configuración de compresión
COMPRESSION_LEVEL=6

# Configuración de caché
CACHE_DEFAULT_TTL=300
CACHE_REDIS_ENABLED=true

# Configuración de colas (Bull)
QUEUE_EMAIL_CONCURRENCY=5
QUEUE_ANALYTICS_CONCURRENCY=2
QUEUE_RECOMMENDATIONS_CONCURRENCY=3
QUEUE_NOTIFICATIONS_CONCURRENCY=8

# Configuración de métricas
METRICS_ENABLED=true
METRICS_INTERVAL=60000

# Configuración de Elasticsearch (opcional)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=twentyonepilots

# Configuración de Firebase (opcional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Configuración de Google APIs (opcional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Configuración de Mapbox (opcional)
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Configuración de reCAPTCHA (opcional)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret

# Configuración de Sentry (opcional)
SENTRY_DSN=your-sentry-dsn

# Configuración de New Relic (opcional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Twenty One Pilots API

# Configuración de AWS (opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Configuración de Cloudinary (opcional)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Configuración de Twilio (opcional - para SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Configuración de SendGrid (opcional - para emails)
SENDGRID_API_KEY=your-sendgrid-api-key

# Configuración de Discord (opcional - para notificaciones)
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Configuración de Slack (opcional - para notificaciones)
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Configuración de Telegram (opcional - para notificaciones)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Configuración de Redis Sentinel (opcional - para alta disponibilidad)
REDIS_SENTINEL_HOSTS=redis-sentinel-1:26379,redis-sentinel-2:26379,redis-sentinel-3:26379
REDIS_SENTINEL_NAME=mymaster

# Configuración de Redis Cluster (opcional)
REDIS_CLUSTER_HOSTS=redis-cluster-1:6379,redis-cluster-2:6379,redis-cluster-3:6379

# Configuración de RabbitMQ (opcional - alternativa a Bull)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_EXCHANGE=twentyonepilots
RABBITMQ_QUEUE_EMAIL=email_queue
RABBITMQ_QUEUE_ANALYTICS=analytics_queue
RABBITMQ_QUEUE_RECOMMENDATIONS=recommendations_queue
RABBITMQ_QUEUE_NOTIFICATIONS=notifications_queue

# Configuración de Bull Dashboard (opcional)
BULL_DASHBOARD_ENABLED=true
BULL_DASHBOARD_USERNAME=admin
BULL_DASHBOARD_PASSWORD=admin123

# Configuración de métricas Prometheus (opcional)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# Configuración de Grafana (opcional)
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=your-grafana-api-key

# Configuración de Elasticsearch APM (opcional)
ELASTIC_APM_SERVER_URL=http://localhost:8200
ELASTIC_APM_SECRET_TOKEN=your-elastic-apm-token
ELASTIC_APM_SERVICE_NAME=twentyonepilots-api

# Configuración de Jaeger (opcional - para tracing distribuido)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_SERVICE_NAME=twentyonepilots-api

# Configuración de Zipkin (opcional - alternativa a Jaeger)
ZIPKIN_URL=http://localhost:9411/api/v2/spans

# Configuración de OpenTelemetry (opcional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=twentyonepilots-api
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Configuración de health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Configuración de backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30

# Configuración de migraciones
MIGRATION_ENABLED=true
MIGRATION_PATH=./migrations

# Configuración de seeds
SEED_ENABLED=true
SEED_PATH=./seeds

# Configuración de testing
TEST_MONGO_URI=mongodb://localhost:27017/twentyonepilots_test
TEST_REDIS_DB=1
TEST_LOG_LEVEL=error

# Configuración de desarrollo
DEV_CORS_ENABLED=true
DEV_LOG_PRETTY=true
DEV_AUTO_RESTART=true

# Configuración de producción
PROD_COMPRESSION_ENABLED=true
PROD_GZIP_LEVEL=6
PROD_CACHE_ENABLED=true
PROD_RATE_LIMIT_ENABLED=true
PROD_HELMET_ENABLED=true
PROD_CSRF_ENABLED=true