    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "crypto-random-string": "^5.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-metrics": "^1.1.0",
    "express-rate-limit": "^8.1.0",
    "express-sanitizer": "^1.0.6",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "googleapis": "^160.0.0",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "mongoose": "^8.18.1",
    "mongoose-paginate-v2": "^1.9.1",
    "node-geocoder": "^4.4.1",
    "nodemailer": "^7.0.6",
    "pm2": "^6.0.11",
    "prom-client": "^15.1.3",
    "qrcode": "^1.5.4",
