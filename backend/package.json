{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "setup:cache-queues": "node ../scripts/setup-cache-queues.js",
    "cache:status": "redis-cli info | grep -E '(connected_clients|used_memory_human|total_connections_received|keyspace_hits|keyspace_misses)'",
    "cache:clear": "redis-cli flushdb && echo 'Cache cleared'",
    "queue:status": "curl -s http://localhost:5000/api/monitoring/queues/stats || echo 'API not available'",
    "queue:clear": "redis-cli keys 'bull:*:*' | xargs redis-cli del && echo 'Queues cleared'",
    "monitoring:health": "curl -s http://localhost:5000/api/monitoring/health | jq .",
    "monitoring:metrics": "curl -s http://localhost:5000/api/monitoring/metrics",
    "favorites:cleanup": "node -e \"require('./services/favoritesService').cleanupOrphanedFavorites().then(r => console.log('Cleanup result:', r))\"",
    "notifications:cleanup": "node -e \"require('./services/notificationsService').cleanupOldNotifications().then(r => console.log('Cleanup result:', r))\"",
    "favorites:stats": "curl -s http://localhost:5000/api/favorites/stats -H \"Authorization: Bearer $TOKEN\" | jq .",
    "notifications:stats": "curl -s http://localhost:5000/api/notifications/stats -H \"Authorization: Bearer $TOKEN\" | jq .",
    "test:favorites-notifications": "node ../scripts/test-favorites-notifications.js",
    "test:lyrics-maps": "node ../scripts/test-lyrics-maps.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
